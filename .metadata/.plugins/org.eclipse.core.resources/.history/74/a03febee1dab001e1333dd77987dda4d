<!-- Person Bean -->
<bean id="person" class ="com.training.spring.Person" scope="prototype" autowire="byType">
	<property name="firstName" value="John"/> <!-- Setter injection -->
	<constructor-arg value="31" type="int"/> <!-- Constructor injection -->
	<!--  <property name="myCar" ref ="car"/>-->
</bean>

<bean id="car" class = "com.training.spring.Car">
	<property name="make" value="Honda"/>
	<property name="model" value="Accord"/>
	<property name="year" value="2022"/>
</bean>
                        
